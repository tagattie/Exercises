# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 8
indent_style = tab
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.{ex,exs,json}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[Jenkinsfile]
indent_size = 4
indent_style = space
