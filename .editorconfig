# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Makefile,GNUmakefile]
indent_size = 8
indent_style = tab

[/etc/**,/usr/local/etc/**]
indent_size = 4
indent_style = tab
